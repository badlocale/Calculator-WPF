<Application
    x:Class="Calculator.View.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Calculator.View">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="ColorsDictionary" Source="resources/colors.xaml" />
                <ResourceDictionary x:Name="ButtonsDictionary" Source="resources/buttons.xaml" />
                <ResourceDictionary x:Name="TextBlocksDictionary" Source="resources/textblocks.xaml" />
                <ResourceDictionary x:Name="TextBoxesDictionary" Source="resources/textboxes.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
